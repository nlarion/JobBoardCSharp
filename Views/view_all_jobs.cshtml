<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>To Do List</h1>
    <ul>
      @foreach(var job in Model)
      {
        <li>@job.GetTitle()</li>
        <ul>
          <li>@job.GetDescription()</li>
          <li>Name: @job.GetContact().GetPosterName()</li>
          <li>Email: @job.GetContact().GetPosterEmail()</li>
          <li>Phone: @job.GetContact().GetPosterPhone()</li>
        </ul>

      }
    </ul>
    <p><a href="/">Add another job</a></p>
    <form action="/jobs_cleared" method="post">
      <button type="submit" name="button">Clear All Jobs</button>
    </form>
  </body>
</html>
